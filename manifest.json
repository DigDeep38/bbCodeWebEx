{
     "manifest_version": 2,
     "name": "__MSG_name__",
     "version": "0.0.1",
     "description": "__MSG_description__",
     "default_locale": "en-US",
     "icons": {
          "16": "icons/bbcwbx.svg"
          
     },
     "author": "Matthew G. Saroff",
     "homepage_url": "https://github.com/msaroff/bbCodeWebEx",
     "permissions": [
           "<all_urls>",
           "webRequest",
           "downloads",
           "notifications",
           "contextMenus",
           "menus",
           "storage",
           "tabs",
           "alarms",
           "activeTab",
           "clipboardRead",
           "clipboardWrite"
     ],
     "web_accessible_resources": [
           "data/*.json"
     ],
     "background": {
          "scripts": ["context_menu.js"]
     },
         "content_scripts": [
              {
              "matches": ["*://*/*"],
              "js": ["node_modules/es6lib/dom.js", "content_script.js"]
              }
         ],
     "options_ui": {
          "page": "settings/options.html",
                "browser_style": false
     }
}